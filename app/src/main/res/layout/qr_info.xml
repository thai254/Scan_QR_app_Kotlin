<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/qr_info_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:paddingBottom="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:orientation="vertical">

            <TextView
                android:id="@+id/qr_info_thoigian"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/qr_info_noidung"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.01"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <ImageView
            android:id="@+id/qr_info_reused"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginRight="1dp"
            android:src="@drawable/re_used" />

        <ImageView
            android:id="@+id/qr_info_trash"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginRight="1dp"
            android:src="@drawable/delete_logo" />


    </LinearLayout>

</LinearLayout>